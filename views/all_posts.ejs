<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Posts</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <h1>Posts</h1>

    <% for (let post of posts) { %>
    <div class="post">
      <h3 class="user">@<%= post.username %></h3>
      <p name="content" class="content"><%= post.content %></p>

      <a href="http://localhost:8080/posts/<%= post.id%>/edit">
        <div class="edit_button btn">Edit this post</div>
      </a>

      <form
        method="post"
        action="http://localhost:8080/posts/<%= post.id%>?_method=DELETE"
        class = "delete_form"
      >
        <button class="btn delete_button">Delete this Post</button>
      </form>
    </div>
    <% } %>

    <a href="http://localhost:8080/posts/new">
      <div class="create_button btn">Create new Post!</div>
    </a>
  </body>
</html>
